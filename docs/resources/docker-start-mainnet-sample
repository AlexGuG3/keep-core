export ETHEREUM_WS_URL="<Ethereum API WS URL>"
export KEEP_ETHEREUM_PASSWORD="<Ethereum Key File Password>"

export KEEP_CONFIG_DIR=$(pwd)/config
export KEEP_STORAGE_DIR=$(pwd)/storage

export OPERATOR_KEY_FILE_NAME="<Operator Key File Name>"

docker run \
    --volume $KEEP_CONFIG_DIR:/mnt/keep/config \
    --volume $KEEP_STORAGE_DIR:/mnt/keep/storage \
    --env KEEP_ETHEREUM_PASSWORD=$KEEP_ETHEREUM_PASSWORD \
    --env LOG_LEVEL=debug \
    --log-opt max-size=100m \
    --log-opt max-file=3 \
    -p 3919:3919 \
    -p 8080:8080 \
    -p 8081:8081 \
    keepnetwork/keep-client:latest \
    start \
    --ethereum.url $ETHEREUM_WS_URL \
    --ethereum.keyFile /mnt/keep/config/$OPERATOR_KEY_FILE_NAME \
    --storage.dataDir /mnt/keep/storage
