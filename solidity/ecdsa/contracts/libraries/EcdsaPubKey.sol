pragma solidity ^0.8.9;

/// @notice Auxiliary library providing functions to convert between bytes32
///         public key X and Y coordinates and uncompressed public key
///         bytes array format.
library EcdsaPubKey {
    /// @notice Extract X public key coordinate from uncompressed, concatenated
    ///         public key bytes.
    function getX(bytes calldata publicKey) internal pure returns (bytes32) {
        return bytes32(publicKey[:32]);
    }

    /// @notice Extract Y public key coordinate from uncompressed, concatenated
    ///         public key bytes.
    function getY(bytes calldata publicKey) internal pure returns (bytes32) {
        return bytes32(publicKey[32:]);
    }

    /// @notice Concatenate X and Y public key coordinates into uncompressed
    ///         bytes array.
    function concat(bytes32 x, bytes32 y) internal pure returns (bytes memory) {
        return bytes.concat(x, y);
    }
}
